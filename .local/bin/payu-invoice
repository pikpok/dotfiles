echo "----> Get cookies"
curl -L --cookie "$COOKIES" "https://doladowania.payu.pl/faktura" --cookie-jar /tmp/faktura-cookies

echo "----> Send invoice"

curl \
-L \
'https://doladowania.payu.pl/faktura' \
-H 'User-Agent: Mozilla/5.0 (X11; Linux x86_64; rv:77.0) Gecko/20100101 Firefox/77.0' \
-H 'Accept: text/html,application/xhtml+xml,application/xml;q=0.9,image/webp,*/*;q=0.8' \
-H 'Accept-Language: en-US,en;q=0.5' \
--compressed \
-H 'Content-Type: application/x-www-form-urlencoded' \
-H 'Origin: https://doladowania.payu.pl' \
-H 'Connection: keep-alive' \
-H 'Referer: https://doladowania.payu.pl/faktura' \
--cookie /tmp/faktura-cookies \
-H 'Upgrade-Insecure-Requests: 1' \
-H 'Sec-Fetch-Dest: document' \
-H 'Sec-Fetch-Mode: navigate' \
-H 'Sec-Fetch-Site: same-origin' \
-H 'Sec-Fetch-User: ?1' \
-H 'Pragma: no-cache' \
-H 'Cache-Control: no-cache' \
--data-raw "$DATA" \
--verbose

echo "----> Success!"
